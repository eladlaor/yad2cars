{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "yad2cars",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["dev"],
        "env": {
            "NODE_OPTIONS": "--inspect"
          },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "sourceMaps": true,
        "restart": true,
        "outFiles": ["${workspaceFolder}/.next/**/*.js"]
      }
    ]
  }
  